<h4 class="teal-text center">Contact Entries</h4>
<hr  />
<table class="responsive-table centered highlight">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email Address</th>
      <th>Subject</th>
      <th>Message</th>
      <th>Edit/Delete</th>
    </tr>
  </thead>

  <tbody>
    {{#each data}}
    <tr class="tablerow">
      <td>{{ this.firstName }} {{this.lastName}}</td>
      <td>{{ this.email }}</td>
      <td>{{ this.subject }}</td>

      <td style="width: 300px; overflow-x: scroll">{{ this.message }}</td>
      <td>
        <button
         
          data-target="{{this._id}}"
          class="btn waves-effect waves-light modal-trigger"
          name="{{ this._id }}"
        >
          <i class="fa fa-edit"></i>
        </button>
        <button
          name="{{ this._id }}"
          onclick="deleteone(event)"
          class="btn waves-effect red darken-3"
          name="action"
        >
          <i class="fa fa-trash"></i>
        </button>
      </td>
    </tr>
     <!-- Edit Modal Structure -->
  <div id="{{this._id}}" class="modal">
    <form class="col s12"  method="POST" action="/admin/contact/editone">
    <div class="modal-content">
      <h4>Edit</h4>
      
     <div class="row">
    
      <div class="row">
        <div class="input-field col s4">
          <input onkeyup="handleChange(event)" placeholder="" id="name" value="{{this.firstName}}"  name="firstName" type="text" class="validate">
          <label for="first_name">First Name</label>
        </div>
         <div class="input-field col s4">
          <input onkeyup="handleChange(event)" placeholder="" id="name" value="{{this.lastName}}"  name="lastName" type="text" class="validate">
          <label for="last_name"> Last Name</label>
        </div>
        <div class="input-field col s4">
          <input onkeyup="handleChange(event)" name="email"   id="email" type="email" value="{{this.email}}">
          <label for="last_name">Email Address</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s6">
          <input   value="{{this.subject}}" onkeyup="handleChange(event)"  id="name" type="text" class="validate" name="subject">
          <label for="first_name">Phone</label>
        </div>
        <div class="input-field col s6">
          <input onkeyup="handleChange(event)"  id="message" type="text" class="validate" name="message" value="{{this.message}}">
          <label for="message">Message</label>
          <input name="id" value="{{this._id}}" type="hidden" />
        </div>
       
      </div>
    </div>
    <div class="modal-footer">
      <a href="#!" class="modal-close waves-effect waves-green btn-flat">Discard</a>
       <input type="submit" value="Save" class="btn" >
      
    </div>
      </form>
  </div>
  {{!-- modal structure ends --}}
    {{/each}}
  </tbody>
</table>
<div style="margin: 30px 0px">
   <form action="/export/contact" style="color:white"></form>
  <a
    href="/admin/contact/delete"
    class="btn waves-effect red darken-3"
    name="action"
    >Delete All
    <i class="fa fa-trash"></i>
  </a>
 
  <input style="color:white;" class="btn waves-effect teal lighten-4" value="Export To Excel" type="submit" name="action">
   
   
    </form>
</div>

