 <main class="main-content">
    <div class="container-fluid photos">
      <div class="row justify-content-center">
        
        <div class="col-md-8 pt-4">
          
          <div class="row mb-5" data-aos="fade-up">
            <div class="col-12">
              <h2 class="text-white mb-4 text-center">My Cart</h2>
            </div>
          </div>

{{#if products}}
{{#each products}}
          <div class="row pt-4">
            <div class="col-md-12" data-aos="fade-up">
              <div class="d-flex Cart-entry align-items-start">
                <div class="mr-5 img-wrap"><a href="#"><img style="height: 200px;width:200px; object-fit:cover" src="{{this.item.url}}" alt="Image" class="img-fluid"></a></div>
                <div>
                  <h2 class="mt-0 mb-2"><a href="#">{{this.item.productName}}</a></h2>
                  <div class="meta mb-3"><a href="#">{{this.qty}}</a></div>
                  <p>This is the description of the product</p>
                  <p class="text-primarty">Price:${{this.item.price}}</p>
                  <a href="/api/removefromcart/{{this.item._id}}">Remove</a>
                </div>
              </div>
            </div>
      </div>
      
          {{/each}}
          <div class="row py-4">
    <h3 class="text-primary" style="text-align: right;">
      Total Price:${{totalPrice}}   </h3>
      <a href="/checkout" class="btn btn-primary mx-4">Proceed to Checkout</a>
            </div>
          {{else}}
          <h4 class="text-primary">Seems Like Your Shopping Cart is Empty!!</h4>
            {{/if}}
            <div></div>
      <div class="row justify-content-center">
        <div class="col-md-12 text-center py-5">
          <p>
         This website is under Development by <a href="https://apricopt.com">Apricopt</a>
      </p>
        </div>
      </div>
    </div>
  </main>